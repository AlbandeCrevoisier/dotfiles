set nocompatible

set background=dark
set colorcolumn=80

set showcmd
set ruler

set cursorline
set cursorcolumn
"set number
set relativenumber

set incsearch
set showmatch
set hlsearch

set autoindent
set smartindent
set tabstop=8
set shiftwidth=8
"set expandtab
set textwidth=0
set backspace=indent,eol,start
set foldmethod=syntax
set foldlevel=99

syntax on
filetype plugin on

set viminfo='20,\"50
set history=100

set mouse=a

