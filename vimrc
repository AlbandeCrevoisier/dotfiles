set nocompatible

"DISPLAY
set background=dark
set colorcolumn=80

"  bottom info
set showcmd
set ruler

"  cursor
set cursorline
set cursorcolumn
set number
"set relativenumber

"SEARCH
set incsearch
set showmatch
set hlsearch

"FORMAT
"  indent
set autoindent
set smartindent
set tabstop=8
set shiftwidth=8
"set expandtab
"  text control
set textwidth=0
set backspace=indent,eol,start
"  folding
set foldmethod=syntax
set foldlevel=99

"SYNTAX
syntax on
filetype plugin on

"TOOLS AND COMMANDS
set viminfo='20,\"50
set history=100

"MOUSE
set mouse=a

